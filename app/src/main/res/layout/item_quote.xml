<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_margin="@dimen/default_spacing"
    android:elevation="2dp">

    <RelativeLayout
        android:id="@+id/quoteLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivQuoteBackImage"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/default_spacing"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_image_edit"
            tools:visibility="visible" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvQuoteText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:maxLines="7"
            android:padding="@dimen/default_double"
            android:text="@string/default_quote_text"
            android:textAlignment="center"
            android:textSize="20sp"
            tools:text="@string/default_quote_text" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvQuoteAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:padding="@dimen/default_spacing"
            android:text="@string/default_author_text"
            tools:text="Autor" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>